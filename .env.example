# Copy this file to .env and adjust values for your environment.

# Server settings
EXPOSE_BASE_DOMAIN=example.com
EXPOSE_PUBLIC_URL=https://example.com
EXPOSE_DB_PATH=./expose.db
EXPOSE_API_KEY_PEPPER=change-me
# TLS mode: auto|dynamic|wildcard
EXPOSE_TLS_MODE=auto
EXPOSE_LISTEN_HTTPS=:443
EXPOSE_LISTEN_HTTP_CHALLENGE=:80
EXPOSE_CERT_CACHE_DIR=./cert-cache
EXPOSE_TLS_CERT_FILE=
EXPOSE_TLS_KEY_FILE=
EXPOSE_LOG_LEVEL=info

# Client settings
EXPOSE_SERVER_URL=https://example.com
EXPOSE_API_KEY=
EXPOSE_LOCAL_URL=http://127.0.0.1:3000
EXPOSE_SUBDOMAIN=
